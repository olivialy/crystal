input[type=text]
input[type=email]
textarea
    width: 100%
    min-height: 2em
    padding: .3em .75em
    border-top: none
    border-right: none
    border-bottom: 6px solid $colour.default
    border-left: none
    background-color: rgba($colour.crystal, 0)
    color: $colour.default
    font-size: 1.14em
    font-weight: bold
    text-transform: uppercase
    transition background-color .2s, color .2s

    &::placeholder
        color: $colour.default

    &:focus
        background-color: rgba($colour.crystal, 1)
        color: $colour.darkgrey
        outline: none

input[type="button"]
input[type="submit"]
    cursor: pointer

fieldset
    position: relative
    top: -.5em
    margin: 0
    padding-top: 0
    padding-bottom: 0
    border: none

    > p
        padding-bottom: 0
