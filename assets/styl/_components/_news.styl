.news
    {clearfix}

    a
        color: $colour.default
        text-decoration: none

    &-item
        float: left
        width: calc(100%/3 - 2em)
        margin: 0 1em 1em
        list-style: none

        &-preview
            position: relative
            margin-bottom: 2em
            padding-bottom: 0

            > img
                {responsive}

            > svg
            &:before
                opacity: 0
                transition: opacity .2s

            > svg
                position: absolute
                top: 50%
                left: 50%
                transform: translate(-50%, -50%)
                fill: white

            &:before
                position: absolute
                content: ''
                top: 0
                right: 0
                bottom: 0
                left: 0
                background-color: rgba($colour.default, .6)

            &:hover
                > svg
                &:before
                    opacity: 1

        &-date
            padding-bottom: 0
            text-transform: uppercase

        &-title
            padding-bottom: 1em
            font-size: 1.28em
            font-weight: bold

        &-desc
            line-height: 1.2


