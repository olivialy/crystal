.featured
    {clearfix}
    //padding: 0 1em
    margin: 0 .5em

    &-item
        float: left
        width: calc(20% - 1em)
        height: 720px
        margin: 0 .5em
        list-style-type: none
        background-position: top center
        background-repeat: no-repeat
        transition: width .25s ease

        &-on
            width: calc(25% - 1em)

        &-off
            width: calc(18.75% - 1em)

        for bg in water ice meca decor sfx
            &-{bg}
                background-image: "url(../img/featured-%s.jpg)" % bg

    a
        position: relative
        display: block
        height: 100%
        width: 100%

    svg
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        fill: white

