.showcase
    h2
        margin-bottom: .5em
        color: $colour.crystal
        font-size: 1em
        font-weight: bold
        text-transform: none

        &:before
            content: ''
            display: block
            width: 145px
            margin-bottom: .5em
            border-top: 1px solid $colour.crystal

    &-material
        padding-bottom: 1em

        li
            display: inline
            padding-right: .5em

        for material in $materials
            &-{material}
                svg
                    fill: $colour[material]

    &-skills
        dt
            font-weight: bold
            text-transform: uppercase

        dd
            padding-bottom: 1em

        ul
            list-style: none

    &-detail
        h2
            text-transform: uppercase

        ul
            list-style: none

            ul
                padding-left: 1em

        li
            &:before
                content: '- '

    @media $screen.sm
        &-skills
            dt
                float: left
                padding-right: 1em

            dd
                overflow: hidden

            li
                display: inline
                float: left
                padding-right: 1em

                &:before
                    content: '\2022  '
