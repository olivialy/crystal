.cover
    display: table
    width: 100%
    height: 394px;
    background-attachment: fixed
    background-position: center
    background-repeat: no-repeat
    background-size: cover

    &-content
        display: table-cell
        width: 100%;
        height: 100%
        background-color: rgba($colour.default, .4)
        color: white
        text-align: center
        vertical-align: middle

        p
            font-size: 1.143em
            line-height: 1.2


    for page in realisations news
        &-{page}
            background-image: "url(../img/cover-%s.jpg)" % s(page)
