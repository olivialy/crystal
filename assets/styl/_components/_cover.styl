.cover
    display: table
    width: 100%
    height: 394px;
    background-attachment: fixed
    background-position: center
    background-repeat: no-repeat
    background-size: cover

    &-content
        display: table-cell
        width: 100%;
        height: 100%
        background-color: rgba($colour.default, .4)
        color: white
        text-align: center
        vertical-align: middle

    &-realisations
        background-image: url(../img/cover-realisations.jpg)
