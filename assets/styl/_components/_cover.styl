.cover
    display: table
    width: 100%
    height: 394px;
    background-attachment: fixed
    background-position: center
    background-repeat: no-repeat
    background-size: cover

    h1
        line-height: 1

        span
            font-weight: normal

    &-content
        display: table-cell
        width: 100%;
        height: 100%
        background-color: rgba($colour.default, .4)
        color: white
        text-align: center
        vertical-align: middle

        p
            padding-top: 1em
            font-size: 1.143em
            line-height: 1.2


    &-presentation
        .cover-content
            background-color: rgba(white, .6)
            color: $colour.default

    for covername in realisations news presentation value1 value2
        &-{covername}
            background-image: "url(../img/cover-%s.jpg)" % s(covername)
