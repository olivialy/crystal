.showcasehead
    display: flex
    width: 100%
    height: 100%
    text-align: center
    align-items: center
    background-color: rgba($colour.default, .4)
    color: white

    h1
        margin: .2em 0 .1em

    &-date
        _bordered({mt: 0em, borderWidth:1px, borderColour: $colour.default})
        font-size: _px2em(20px)

    &-title
        font-size: _px2em(16px)
        font-weight: normal
        line-height: 1.6

        span
            display: block
            text-transform: none

    @media $screen.md
        height: 233px
        background-color: $colour.crystal
        color: $colour.default
