.menu
    li
        display: inline-block
        padding-right: 1em
        padding-bottom: 1em
        font-size: 1.14em

    a
        color: $colour.default
        text-decoration: none

        &:hover
            text-decoration: underline

    svg
        vertical-align: middle

    &-lang
        padding-right: 0!important

    &-active
        a
            color: $colour.crystal
            text-decoration: underline

        svg
            transform: rotate(90deg)
            fill: $colour.crystal

    &-expanded
        position: relative

        &:after
            content: ''
            display: block
            position: absolute
            bottom: 0
            left: 50%
            width: 0
            height: @width
            border: 10px solid transparent
            border-bottom-color: $colour.default
            transform: translateX(-100%)
