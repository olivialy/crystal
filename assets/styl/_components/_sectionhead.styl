.sectionhead
    display: flex
    width: 100%
    height: 100%
    text-align: center
    align-items: center

    &-content
        h1
            line-height: 1

            span
                font-weight: normal

        p
            padding-top: 1em
            font-size: 1.143em

    &-black
        background-color: rgba($colour.default, .4)
        color: white

    &-white
        background-color: rgba(white, .4)
        color: black

