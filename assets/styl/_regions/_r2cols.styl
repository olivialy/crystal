.r2cols
    display: flex
    flex-direction: column
    align-items: center

    p
        padding-bottom: 1em

    img
        display: inline-block

    &-child
    &-1third
    &-2third
        width: 100%

    @media $screen.sm
        text-align: center

    @media $screen.md
        flex-direction: row

        &-child
            width: 50%
            padding-right: 1em
            padding-left: 1em

            &:first-child
                padding-left: 0

            &:last-child
                padding-right: 0

        &-1third
            width: 33%
            padding-right: 1em
            padding-left: 1em

        &-2third
            width: 66%
            padding-right: 1em
            padding-left: 1em
