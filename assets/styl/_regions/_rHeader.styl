.rHeader
    display: flex
    padding: 1em 1em 0

    &-brand
        width: 15%
        max-width: 227px

        svg
            width: 100%
            height: auto

    &-nav
        display: flex
        justify-content: space-between
        width: 85%

        &-aside
            text-align: center

        &-main
            margin: 0 auto
            text-align: center

    @media $screen.sm
        &-nav
            position: fixed
            z-index: 20
            top: 0
            left: 0
            flex-direction: column
            justify-content: center
            width: 100%
            height: 100%
            background-color: white

    @media $screen.lg
        &-aside
            width: 18%
            max-width: 227px
            text-align: right
