.rHeader
    display: flex
    padding: 1em 1em 0

    button
        {topRightButton}
        {triggerButton}

    &-brand
        width: 15%
        min-width: 120px
        max-width: 227px

        svg
            width: 100%
            height: auto

    &-nav
        display: flex
        justify-content: space-between
        align-items: flex-end
        width: 85%

        button
            display: none

        &-aside
            text-align: center

        &-main
            margin: 0 auto
            text-align: center

    @media $screen.sm
        button
            display: block

        &-nav
            position: fixed
            z-index: 20
            top: 0
            left: 0
            flex-direction: column
            justify-content: center
            width: 100%
            height: 100%
            background-color: white
            transition: transform .4s
            transform: translateY(-100%)

            &-open
                transform: translateY(0)

    @media $screen.md
        > button
            display: none

    @media $screen.lg
        &-aside
            width: 18%
            max-width: 227px
            text-align: right
