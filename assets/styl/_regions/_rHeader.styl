.rHeader
    display: table
    padding: 1em 1em 0

    &-brand
    &-aside
    &-nav
        display: table-cell
        vertical-align: bottom

    &-brand
        width: 227px

    &-aside
        width: 120px
        text-align: right

    &-nav
        width: calc(100% - 347px) // 100% - (brand width) - (aside width)
        padding-right: 107px // make the content look centered on the _page_ | 107px =  (brand width) - (aside width)
        text-align: center
