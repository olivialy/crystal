.rCover
    display: flex
    width: 100%
    height: 394px;
    background-attachment: fixed
    background-position: center
    background-repeat: no-repeat
    background-size: cover

    for covername in realisations news presentation value1 value2
        &-{covername}
            background-image: "url(../img/cover-%s.jpg)" % s(covername)
