.rCover
    display: flex
    align-items: center
    width: 100%
    height: 394px;
    background-attachment: fixed
    background-position: center
    background-repeat: no-repeat
    background-size: cover

    &-content
        display: flex
        align-items: center

    for covername in realisations news presentation value1 value2
        &-{covername}
            background-image: "url(../img/cover-%s.jpg)" % s(covername)
